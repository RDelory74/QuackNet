{% extends 'base.html.twig' %}

{% block title %}Quack index{% endblock %}

{% block myContent %}
    <h1>Quack index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Author</th>
                <th>Content</th>
                <th>Created_at</th>
                {% if app.user %}
                <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for quack in quacks %}
            <tr>
                <td>{{ quack.author.duckname }}</td>
                <td>{{ quack.content }}</td>
                <td>{{ quack.createdAt ? quack.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                {% if app.user == quack.author %}
                <td>
                    <a href="{{ path('app_quack_show', {'id': quack.id}) }}">Show</a>
                    <a href="{{ path('app_quack_edit', {'id': quack.id}) }}">Edit</a>
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_quack_new') }}">Create new</a>
{% endblock %}
